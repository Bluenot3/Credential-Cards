    <script>
        const card = document.getElementById('card');
        const cardLayerMid = document.querySelector('.layer-mid');
        const cardLayerDeep = document.querySelector('.layer-deep');
        const scene = document.querySelector('.scene');
        const reflection = document.querySelector('.reflection-sheen');

        // Mouse Parallax Logic
        document.addEventListener('mousemove', (e) => {
            const windowW = window.innerWidth;
            const windowH = window.innerHeight;
            
            const mouseX = (e.clientX - windowW / 2) / (windowW / 2);
            const mouseY = (e.clientY - windowH / 2) / (windowH / 2);

            // 1. Rotate the whole card
            // Limit rotation to 15 degrees
            const rotX = mouseY * -15; 
            const rotY = mouseX * 15;
            
            card.style.transform = `rotateX(${rotX}deg) rotateY(${rotY}deg)`;

            // 2. Shift inner layers for depth (Parallax)
            // Mid layer moves slightly opposite to rotation to feel floating
            cardLayerMid.style.transform = `translateZ(50px) translateX(${mouseX * -10}px) translateY(${mouseY * -10}px)`;
            
            // Deep layer moves with rotation for background depth
            cardLayerDeep.style.transform = `translateZ(20px) translateX(${mouseX * 15}px) translateY(${mouseY * 15}px)`;

            // 3. Move reflection
            card.style.setProperty('--mouse-x', `${(e.clientX / windowW) * 100}%`);
            card.style.setProperty('--mouse-y', `${(e.clientY / windowH) * 100}%`);
        });

        // Reset on leave
        document.addEventListener('mouseleave', () => {
            card.style.transform = `rotateX(0deg) rotateY(0deg)`;
            cardLayerMid.style.transform = `translateZ(50px)`;
            cardLayerDeep.style.transform = `translateZ(20px)`;
        });

        // Code Stream Animation
        const terminal = document.getElementById('code-stream');
        const lines = [
            "> connecting to neural_link...",
            "> handshake: verified",
            "> loading user_profile(AC)...",
            "> decrypting badges... [OK]",
            "> sync_rate: 99.8%",
            "> quantum_entanglement: stable",
            "> fetching achievements...",
            "> status: elite_pioneer",
            "> awaiting input_"
        ];

        let lineIndex = 0;
        let charIndex = 0;
        let currentText = "";

        function typeWriter() {
            if (lineIndex < lines.length) {
                const line = lines[lineIndex];
                if (charIndex < line.length) {
                    currentText += line.charAt(charIndex);
                    terminal.innerText = currentText;
                    charIndex++;
                    setTimeout(typeWriter, Math.random() * 50 + 20); // Random typing speed
                } else {
                    currentText += "\n";
                    terminal.innerText = currentText;
                    lineIndex++;
                    charIndex = 0;
                    setTimeout(typeWriter, 400); // Pause between lines
                }
                
                // Keep scrolled to bottom
                terminal.scrollTop = terminal.scrollHeight;
            } else {
                // Loop
                setTimeout(() => {
                    lineIndex = 0;
                    currentText = "";
                    terminal.innerText = "";
                    typeWriter();
                }, 3000);
            }
        }
        
        // Start typing
        typeWriter();

    </script>
