    <script>
        const card = document.getElementById('card');
        const glare = document.getElementById('glare');
        const hashText = document.getElementById('hashText');

        // 1. Tactical Tilt Physics
        document.addEventListener('mousemove', (e) => {
            const w = window.innerWidth;
            const h = window.innerHeight;
            
            const x = (e.clientX - w/2) / (w/2);
            const y = (e.clientY - h/2) / (h/2);
            
            // Heavier rotation
            const rotX = y * -15;
            const rotY = x * 15;
            
            card.style.transform = `rotateX(${rotX}deg) rotateY(${rotY}deg)`;
            
            // Move glare opposite to simulate reflection source
            const glareX = -50 + (x * 100); 
            glare.style.transform = `translateX(${glareX}%) skewX(-20deg)`;
        });

        // 2. Hash Scramble Effect
        const chars = 'ABCDEF0123456789';
        setInterval(() => {
            let str = '';
            for(let i=0; i<12; i++) {
                str += chars[Math.floor(Math.random() * chars.length)];
            }
            hashText.innerText = str;
        }, 100);

        // 3. WebGL-style Wireframe Globe (Canvas)
        const canvas = document.getElementById('globeCanvas');
        const ctx = canvas.getContext('2d');
        
        // Handle resolution
        const dpr = window.devicePixelRatio || 1;
        const rect = canvas.getBoundingClientRect();
        canvas.width = rect.width * dpr;
        canvas.height = rect.height * dpr;
        ctx.scale(dpr, dpr);
        
        const width = rect.width;
        const height = rect.height;
        const cx = width / 2;
        const cy = height / 2;
        const globeRadius = 60;
        
        let angle = 0;
        
        function drawGlobe() {
            ctx.clearRect(0, 0, width, height);
            
            angle += 0.01;
            
            ctx.strokeStyle = '#00f0ff';
            ctx.lineWidth = 1;
            
            // Latitudes
            for(let i = 0; i < 7; i++) {
                const lat = (i - 3) * (Math.PI / 8);
                const r = globeRadius * Math.cos(lat);
                const y = globeRadius * Math.sin(lat);
                
                // Draw ellipses
                ctx.beginPath();
                // Simple orthogonal projection approximation
                for(let a=0; a<=Math.PI*2; a+=0.1) {
                    // Rotate point
                    const x3d = r * Math.cos(a + angle);
                    const z3d = r * Math.sin(a + angle);
                    
                    // Perspective (slight)
                    const scale = 300 / (300 + z3d);
                    const px = cx + x3d * scale;
                    const py = cy + y * scale;
                    
                    if (a===0) ctx.moveTo(px, py);
                    else ctx.lineTo(px, py);
                }
                ctx.stroke();
            }
            
            // Longitudes (Simplified as vertical ellipses rotating)
            ctx.strokeStyle = 'rgba(0, 240, 255, 0.4)';
            for(let i=0; i<8; i++) {
                const lon = i * (Math.PI / 4) + angle;
                ctx.beginPath();
                ctx.ellipse(cx, cy, globeRadius * Math.abs(Math.cos(lon)), globeRadius, 0, 0, Math.PI * 2);
                ctx.stroke();
            }

            requestAnimationFrame(drawGlobe);
        }
        drawGlobe();

    </script>
</body>
